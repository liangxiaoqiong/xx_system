/* components/chains-list/chains-card-layer/chains-card-layer.wxss */
.chains-card-layer .layer-model {
  z-index: 990;
}
.card-layer {
  position: fixed;
  z-index: 999;
  width: 280px;
  top: 90px;
  left: calc(50% - 140px);
}
.card-layer .card-layer-main {
  background-color: #fff;
  border-radius: 10rpx;
  width: 280px;
  overflow-y: auto;
}
.card-layer .card-layer-main image {
  border-radius: 10rpx;
  width: 100%;
  height: 420px;
  min-height: 200rpx;
  vertical-align: middle;
}
.card-layer .layer-bottom-close {
  text-align:center;
}
.card-layer .layer-bottom-close .foot-tip {
  color: #ffffff;
  font-size: 26rpx;
  padding: 25rpx 0;
}
