/* pages/address/address-info/address-info.wxss */
.page-body{
  padding-top: 20rpx;
}
.dl-basic{
  position: relative;
  padding:18rpx 30rpx;
  background-color: #ffffff;
  display: inline-block;
  width: 100%;
  vertical-align: middle;
}
.dl-basic::after{
  content: '';
  z-index: 1;
  position: absolute;
  bottom: 0;
  left: 30rpx;
  height: 1px;
  width: calc(100% - 60rpx);
  background-color: #f0f0f0;
}
.dl-basic .dl-dt{
  color: #000000;
  width: 120rpx;
  float: left;
  min-height: 60rpx;
  display: flex;
  align-items: center;
}
.dl-basic .dl-dd{
  width: calc(100% - 120rpx);
  float: right;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.dl-basic .dl-dd input{
  height: 60rpx;
  width: 100%;
  text-align: right;
}
.address-dl .dl-basic:last-child::after{
  display: none;
}
component-pick-region{
  width: 100%;
  text-align: right;
}
.edit-address-btn{
  padding: 50rpx 75rpx;
}
.edit-address-btn .btn{
  border: solid 2rpx #f82e2e;
  border-radius: 40rpx;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.edit-address-btn .btn-save{
  background-color: #f82e2e;
  color: #ffffff;
}
.edit-address-btn .btn-del{
  color: #f82e2e;
}