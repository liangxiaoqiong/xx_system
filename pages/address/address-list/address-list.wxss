/* pages/address/address-list/address-list.wxss */
page, .container, .page-body{
  height: 100%;
}
.scroll-address{
  height: calc(100% - 100rpx);
  background-color: #F0F0F0;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.scroll-address .scroll-list{
  padding: 30rpx;
  position: relative;
  background-color: #fff;
}
.scroll-address .scroll-list::after{
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 30rpx;
  background-color: #f0f0f0;
  display: inline-block;
  width: calc(100% - 60rpx);
  height: 1px;
  content: '';
}
.scroll-address .scroll-list:last-child::after{
  display: none;
}
.address-default{
  width: 60rpx;
  display: inline-block;
  vertical-align: middle;
}
.address-default icon{
  display: flex;
  justify-content: center;
  align-items: center;
}
.scroll-address .scroll-list .address-info{
  width: calc(100% - 90rpx);
  display: inline-block;
  vertical-align: middle;
}
.scroll-address .scroll-list .address-info .address{
  color: #000000;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.scroll-address .scroll-list .address-info .consignee text{
  color: #999999;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.scroll-address .scroll-list .address-action{
  position: absolute;
  z-index: 1;
  right: 0;
  top: calc(50% - 40rpx);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
}
.scroll-address .scroll-list .address-action .edit-black{
  width: 34rpx;
  height: 34rpx;
}
.address-foot{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #ffffff;
  background-color: #f82e2e;
}
